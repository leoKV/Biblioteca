extends layout

block content
  h1 Crear Autor

  form(method='POST' action='')
    div.form-group
      label(for='first_name') Primer Nombre:
      input#first_name.form-control(type='text', placeholder='Primer Nombre (Alfonso)' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='family_name') Apellido:
      input#family_name.form-control(type='text', placeholder='Apellido (Ferro)' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
      label(for='date_of_birth') Fecha de Nacimiento:
      input#date_of_birth.form-control(type='date', name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth_yyyy_mm_dd) )
    div.form-group
      label(for='date_of_death') Fecha de Fallecimiento:
      input#date_of_death.form-control(type='date', name='date_of_death' value=(undefined===author ? '' : author.date_of_death_yyyy_mm_dd) )
