extends layout

block content

  h1 Eliminar Genero: #{genre.name}
  
  if genre_books.length
  
    p #[strong Elimina los siguienttes libros antes de eliminar el genero.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Libros
    
      dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Estas seguro de eliminar el genero?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') Eliminar